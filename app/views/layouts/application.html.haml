!!!5
%head
  %title NoticeOfClaim
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true 
  = javascript_include_tag 'application', 'data-turbolinks-track' => true 
  = stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.5.1/css/bootstrap-datepicker.css'
  = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.5.1/js/bootstrap-datepicker.js'
  = csrf_meta_tags 

%body
  %nav.navbar.navbar-default.navbar-fixed-top
    .container
      %ul.nav.navbar-nav.pull-right
        %li= link_to "About", about_path
        %li= link_to "Contact", contact_path
        %li= link_to "Start a Notice of Claim", new_screener_path

.container.noc-main
  = yield

%footer.footer
  .container
    .row
      .col-md-6
        %p Have issues? Submit a #{link_to 'ticket', 'https://github.com/rcackerman/notice-of-claim/issues/new'}
      .col-md-6
        .pull-right
          - if user_signed_in?
            %p #{ link_to('Logout', destroy_user_session_path, :method => :delete) } | #{ link_to("Change your password", edit_user_registration_path) }
          - else
            %p= link_to('Sign In', new_user_session_path)

