= form_for(@notice, data: {}, html: {class: 'form-horizontal'}) do |f|
  - if @notice.errors.any?
    .error_explanation
      %p #{pluralize(@notice.errors.count, "error")} prohibited this notice from being saved:
      %ul
        - @notice.errors.full_messages.each do |message|
          %li= message
  = render(partial: 'notices/form_groups/intro', locals: {f: f})
  = render(partial: 'notices/form_groups/incident_details', locals: {f: f})
  = render(partial: 'notices/form_groups/damages', locals: {f: f})
  #actions
    = f.submit 'Submit', class: 'btn btn-default'
