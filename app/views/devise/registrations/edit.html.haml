%h2 Edit your account

= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f|
  = devise_error_messages!
  = f.email_field :email
  = f.password_field :current_password, help: "(we need your current password to confirm your changes)"
  = f.password_field :password, help: "(leave blank if you don't want to change your password)"
  = f.password_field :password_confirmation
  = f.submit "Update your password", class: "btn btn-submit"

%h3 Cancel my account

= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-submit"

.row
  .col-md-12#back-link
    = link_to "Back", :back, class: "btn btn-default"
